<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <% if (messages && messages.length > 0) { %>
      <% messages.forEach(function(message) { %>
        <div class="message">
          <p>
            <strong><%= message.text %></strong><br>
            By: <%= message.user %><br>
            Added on: <%= message.added %>
          </p>
        </div>
      <% }); %>
    <% } else { %>
      <p>No messages available.</p>
    <% } %>
    <form action="/new">
      <input type="submit" value="New Message" />
    </form>
    
  </body>
</html>
